<?xml version="1.0" encoding="utf-8"?>
<Scene xmlns:sys="https://extendedxmlserializer.github.io/system" xmlns:ns1="clr-namespace:BrokenEngine.Assets;assembly=BrokenEngine" xmlns:exs="https://extendedxmlserializer.github.io/v2" xmlns:ns2="clr-namespace:BrokenEngine.Materials;assembly=BrokenEngine" xmlns:ns3="clr-namespace:BrokenEngine.Models;assembly=BrokenEngine">
  <MetaData>
    <Name>Name</Name>
    <Author>Author</Author>
    <Description>Description</Description>
  </MetaData>
  <Assets>
    <ns1:Material>
      <Name>MyMaterial2</Name>
      <!--<Shader>Shader/phong.glsl</Shader>-->
      <Shader xmlns="clr-namespace:BrokenEngine.Materials;assembly=BrokenEngine">
        <BlinnPhongShader xmlns="clr-namespace:BrokenEngine.Materials;assembly=BrokenEngine">
          <AlbedoColor>
            <R>156</R>
            <G>208</G>
            <B>84</B>
            <A>255</A>
          </AlbedoColor>
          <LightDirection>
            <X>1</X>
            <Y>1</Y>
            <Z>1</Z>
          </LightDirection>
          <AmbientColor>
            <R>156</R>
            <G>208</G>
            <B>84</B>
            <A>255</A>
          </AmbientColor>
          <Blinn>True</Blinn>
        </BlinnPhongShader>
      </Shader>
