    <ns3:Model>
      <Name>Cube</Name>
      <Mesh>Models/cube</Mesh>
    </ns3:Model>
    <ns1:Material>
      <Name>MyMaterial</Name>
      <Shader exs:type="ns2:VertexColorShader" />
    </ns1:Material>
  </Assets>
  <SceneRoot>
    <Children>
      <GameObject>
        <Name>Camera</Name>
        <Position>
          <X>1</X>
          <Y>1</Y>
          <Z>1</Z>
        </Position>
        <Components>
          <Camera xmlns="clr-namespace:BrokenEngine.Components;assembly=BrokenEngine">
            <aspectRatio>1</aspectRatio>
            <fov>60</fov>
            <nearPlane>0.3</nearPlane>
            <farPlane>1000</farPlane>
          </Camera>
        </Components>
      </GameObject>
      <GameObject>
        <Name>Model</Name>
        <Position>
          <X>10</X>
          <Y>1</Y>
          <Z>1</Z>
        </Position>
        <Components>
          <MeshRenderer xmlns="clr-namespace:BrokenEngine.Serialization;assembly=BrokenEngine">
            <Model>MyModel</Model>
            <Material>MyMaterial</Material>
          </MeshRenderer>
        </Components>
      </GameObject>
    </Children>
  </SceneRoot>
